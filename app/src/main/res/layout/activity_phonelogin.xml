<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phonelogin"
    android:orientation="vertical"
    android:background="#EAF3EA"
    >
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/jacques_francois"
        android:text="Two more Steps to Go!"
        android:textColor="#676464"

        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText

        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/newh"
        android:fontFamily="@font/jacques_francois"
        android:hint="Enter Mobile Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#676464" />
    <Button
        android:id="@+id/otp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/styl"
        android:text="Get OTP"
        android:onClick="getotp"
        android:textColor="#676464"
        app:backgroundTint="@color/lightgreen"

        />



</LinearLayout>