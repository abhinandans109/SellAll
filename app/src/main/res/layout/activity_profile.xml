<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    tools:context=".profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backcolor"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView

            android:id="@+id/profilepic"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/pp"
            android:onClick="immageclaicked"
            android:background="@color/backcolor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:fontFamily="@font/jacques_francois"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            />

            <EditText

                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/newh"
                android:ems="10"
                android:fontFamily="@font/jacques_francois"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#676464"
                 />

<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email Address"
            android:fontFamily="@font/jacques_francois"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            />

            <EditText

                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/newh"
                android:ems="10"
                android:fontFamily="@font/jacques_francois"
                android:hint="Enter Email Address"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#676464"
                />

<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:fontFamily="@font/jacques_francois"
            android:layout_gravity="left"            android:layout_marginTop="10dp"

    android:layout_marginLeft="20dp"
            />

            <EditText

                android:id="@+id/mobileno"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/newh"
                android:ems="10"
                android:fontFamily="@font/jacques_francois"
                android:hint="Enter Contact Number"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#676464"
                />

<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/jacques_francois"
            android:layout_gravity="left"            android:layout_marginTop="10dp"

    android:layout_marginLeft="20dp"
            />

            <EditText

                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/newh"
                android:ems="10"
                android:fontFamily="@font/jacques_francois"
                android:hint="Enter Address"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#676464"
             />
        <Button
            android:id="@+id/otp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/styl"
            android:text="Save"
            android:onClick="saveClicked"
            android:textColor="#676464"
            app:backgroundTint="@color/lightgreen"

            />




    </LinearLayout>

</ScrollView>